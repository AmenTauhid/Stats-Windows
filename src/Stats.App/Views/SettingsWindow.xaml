<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Stats.App.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Text="Settings"
            Style="{StaticResource TitleTextBlockStyle}"
            Margin="0,0,0,24" />

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24">

                <!-- General Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="General" Style="{StaticResource SubtitleTextBlockStyle}" />

                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="16">
                            <!-- Start with Windows -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Start with Windows" />
                                    <TextBlock
                                        Text="Launch Stats automatically when you sign in"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ToggleSwitch
                                    x:Name="StartWithWindowsToggle"
                                    Grid.Column="1"
                                    OnContent=""
                                    OffContent=""
                                    Toggled="StartWithWindowsToggle_Toggled" />
                            </Grid>

                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <!-- Start Minimized -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Start minimized" />
                                    <TextBlock
                                        Text="Start in system tray instead of showing the window"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ToggleSwitch
                                    x:Name="StartMinimizedToggle"
                                    Grid.Column="1"
                                    OnContent=""
                                    OffContent=""
                                    Toggled="StartMinimizedToggle_Toggled" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Appearance Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Appearance" Style="{StaticResource SubtitleTextBlockStyle}" />

                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="16">
                            <!-- Theme -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Theme" />
                                    <TextBlock
                                        Text="Choose light, dark, or system theme"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ComboBox
                                    x:Name="ThemeComboBox"
                                    Grid.Column="1"
                                    Width="150"
                                    SelectionChanged="ThemeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="System" Tag="System" />
                                    <ComboBoxItem Content="Light" Tag="Light" />
                                    <ComboBoxItem Content="Dark" Tag="Dark" />
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Monitoring Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Monitoring" Style="{StaticResource SubtitleTextBlockStyle}" />

                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="16">
                            <!-- Update Interval -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Update interval" />
                                    <TextBlock
                                        Text="How often to refresh hardware data"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ComboBox
                                    x:Name="UpdateIntervalComboBox"
                                    Grid.Column="1"
                                    Width="150"
                                    SelectionChanged="UpdateIntervalComboBox_SelectionChanged">
                                    <ComboBoxItem Content="500 ms" Tag="500" />
                                    <ComboBoxItem Content="1 second" Tag="1000" />
                                    <ComboBoxItem Content="2 seconds" Tag="2000" />
                                    <ComboBoxItem Content="5 seconds" Tag="5000" />
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- About Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="About" Style="{StaticResource SubtitleTextBlockStyle}" />

                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Stats - System Monitor" FontWeight="SemiBold" />
                            <TextBlock
                                Text="Version 1.0.0"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock
                                Text="A Windows system monitoring application inspired by macOS Stats."
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button
            Grid.Row="2"
            Content="Close"
            HorizontalAlignment="Right"
            Margin="0,24,0,0"
            Click="CloseButton_Click" />
    </Grid>
</Window>
